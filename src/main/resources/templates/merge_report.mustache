{{<super}}

{{$title}}Merge Result{{/title}}

{{$head_extra}}    		
    <link rel="stylesheet" href="/static/css/r43ples.versiongraph.css">
    <link rel="stylesheet" href="/static/css/tipsy.css">
{{/head_extra}}

{{$script_extra}}
   	<script src="/static/js/d3.min.js"></script>
    <script src="/static/js/dagre-d3.js"></script>
    <script src="/static/js/jquery.tipsy.js"></script> 
    <script src="/static/js/version-graph.js"></script>

    <script type="text/javascript">
	    $(document).ready(function () {
	     // Graph mit der aktuellen Auswahl erstellen
        	drawGraph("#leftContainer .visualisation", '{{commit.oldRevisionGraph}}', true);
        	
        	
        	
          	drawGraph("#rightContainer .visualisation", "revisiongraph?graph={{commit.graphName}}&format=application/json", true);
	    });
    </script>
{{/script_extra}}

{{$content}}
    <h2>Merge successful</h2>
    {{> merge/mergeReport}}      
    
    <h3>Revision graph visualisation</h3>
    <div id="graphs" class="row">  
      <div class="col-sm-6" id="leftContainer" >
        <fieldset>
          <legend>Before Merge</legend>
          <div class="visualisation"/>
        </fieldset> 
      </div>

      <div class = "col-sm-6" id="rightContainer" >
        <fieldset style="padding-bottom:0px;" >
          <legend>After Merge</legend>
          <div class="visualisation"/>
        </fieldset> 
      </div>
      
    </div>  
    <div class="row ">
      <div class="col-sm-10 col-sm-offset-1">
           <a href="merging" ><button style="width:95%; margin-left:16px" type="button" class="btn btn-default">New Merge</button></a>
          </div>
      </div>   
       {{commit.oldRevisionGraph}}        
{{/content}}

{{/super}}     

  

