{{<super}}

{{$title}}Debug{{/title}}
   
{{$content}}
<div class="row">
	<div id="main" class="col-sm-6">
		<div id="query_form">
			<h2>Debug Query</h2>
			<form method="get" role="form" class="form">
				<div class="form-group">
					<label class="control-label" for="query">Query Text</label>
					<textarea name="query" class="form-control" id="query" rows="16">
SELECT * 
WHERE { 
	GRAPH &lt;{{revisionGraph}}&gt; {
		?s ?p ?o 
	}
}
					</textarea>
				</div>
				<div class="form-group">
				<div class="btn-group col-sm-12">
					<input type="submit" class="col-sm-8 btn btn-primary" value="Run Query" />
					<input type="reset"	class="col-sm-4 btn btn-default" value="Reset" />
				</div>
				</div>
			</form>
		</div>
	</div>
	<div id="main" class="col-sm-6">
		<h2>Debug information</h2>
		<h3>Configuration</h3>
		<ul>
			<li>Version: {{#version}}Version: {{toString}}{{/version}}{{^version}}Git: {{git.commitIdAbbrev}} - {{git.branch}}{{/version}}</li>
			<li>Triplestore: <samp>{{triplestore_type}} - {{triplestore_url}}</samp></li>
			<li>Revision Graph: <samp>{{revisionGraph}}</samp></li>
			<li>SDD Graph: <samp>{{sdd_graph}}</samp></li>
		</ul>
		<h3>Existing graphs in triplestore</h3>
		<ul>
			{{#graphs}}
			 <li><samp>{{toString}}</samp></li>
			{{/graphs}}
			</ul>
	</div>
</div>
{{/content}}

{{/super}}